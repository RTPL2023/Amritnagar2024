<form asp-controller="Account" asp-action="OnLineCashRecLoan" method="post" enctype="multipart/form-data">
    <div class="container" style="height:60px">

    </div>
    <div class="heading mt-4">
        Loan Cash Receipt
    </div>
    <div class="container mt-2" style="margin-bottom:15px">
        <div class="row justify-content-md-center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 border border-1 rounded border-danger" style="width:1000px">

                <div class="row mt-2">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-12">
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-12" style="color:brown;font-weight:bold">
                        CASH - DEBIT TRANSACTIONS
                    </div>

                </div>
                <div class="row mt-1">
                    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                        Branch<br />
                        @Html.DropDownListFor(p => p.branch, new SelectList(Model.BranchDesc, "Value", "Text"), "Select", new { @class = "size" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                        Date:<br />
                        @Html.TextBoxFor(model => model.date, new { @class = "size", @type = "text" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                        Shift:<br />
                        @Html.DropDownListFor(p => p.shift, new SelectList(Model.BranchDesc, "Value", "Text"), "Select", new { @class = "size" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                        Counter:<br />
                        @Html.DropDownListFor(p => p.counter, new SelectList(Model.BranchDesc, "Value", "Text"), "Select", new { @class = "size" })
                    </div>

                </div>
                <div class="row mt-1">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                        Account Head:
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                        @Html.DropDownListFor(p => p.achd, new SelectList(Model.TypeDesc, "Value", "Text"), "Select", new { @class = "sizeL" })
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        Voucher No.:
                        @Html.TextBoxFor(model => model.vch_no, new { @class = "size", @type = "text" })
                    </div>
                </div>
                <div class="row mt-1" style="padding-left:10px">
                    <div class="col-lg-9 col-md-9 col-sm-12 col-12">
                        <div class="row mt-1 mb-1">
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                Employee Id.<br />
                                @Html.TextBoxFor(model => model.emp_id, new { @class = "sizeM1", @type = "text" })
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                Depositor<br />
                                @Html.TextBoxFor(model => model.depositor, new { @class = "sizeXL", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                Amount<br />
                                @Html.TextBoxFor(model => model.amt, new { @class = "sizeM1", @type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                        <div class="row">
                            <div class="col-md-5 col-sm-12 col-12">
                                <input id="BtnSave" type="button" name="BtnSave" Height="40" Width="100" class="btn btn-primary btn-sm btn1" value="Save" />
                            </div>
                            <div class="col-md-7 col-sm-12 col-12">
                                <input id="BtnPrnRecpt" type="button" name="BtnPrnRecpt" Height="40" Width="100" class="btn btn-primary btn-sm btn2" value="Print Receipt" />
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-5 col-sm-12 col-12">
                                <input id="BtnNext" type="button" name="BtnNext" Height="40" Width="100" class="btn btn-primary btn-sm btn1" value="Next >>" />
                            </div>
                            <div class="col-md-7 col-sm-12 col-12">
                                <input id="BtnPrnStmnt" type="button" name="BtnPrnStmnt" Height="40" Width="100" class="btn btn-primary btn-sm btn2" value="Print Statement" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="container mt-2">
