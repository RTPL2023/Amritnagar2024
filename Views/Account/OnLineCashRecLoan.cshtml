                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    Account Head
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Amount
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Balance
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    @Html.DropDownListFor(p => p.achd_paid, new SelectList(Model.TypeDesc, "Value", "Text"), "Select", new { @class = "size1" })
                                   
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_amt, new { @class = "sizeM1", @type = "text" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_bal, new { @class = "sizeM1", @type = "text" })
                                </div>
                            </div>
                            <div class="row mt-1 mb-1">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    @Html.DropDownListFor(p => p.achd_paid1, new SelectList(Model.TypeDesc, "Value", "Text"), "Select", new { @class = "size1" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_amt1, new { @class = "sizeM1", @type = "text" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_bal1, new { @class = "sizeM1", @type = "text" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-12 border-right" style="border: 1px solid darkslateblue">
                            <div class="row" style="background-color: #ffd5b9; color: darkslateblue;font-weight:bold;text-align:center;font-size:14px">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    Account Head
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Amount
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Balance
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    @Html.DropDownListFor(p => p.achd_paid, new SelectList(Model.TypeDesc, "Value", "Text"), "Select", new { @class = "size1" })
                                   
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_amt, new { @class = "sizeM1", @type = "text" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_bal, new { @class = "sizeM1", @type = "text" })
                                </div>
                            </div>
                            <div class="row mt-1 mb-1">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    @Html.DropDownListFor(p => p.achd_paid1, new SelectList(Model.TypeDesc, "Value", "Text"), "Select", new { @class = "size1" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_amt1, new { @class = "sizeM1", @type = "text" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    @Html.TextBoxFor(model => model.achd_bal1, new { @class = "sizeM1", @type = "text" })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="container mt-1">
                    <div class="row" style="background-color: rgb(216, 191, 216,0.6); color: rgb(119, 7, 55); font-weight: bold; font-size: 14px">
                        <div class="col-lg-3 col-md-3 col-sm-12 col-12 border-right">
                            <div class="row mt-1">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    Name<br />
                                    @Html.TextBoxFor(model => model.name, new { @class = "sizeL_whitebg", @type = "text" })
                                </div>
                            </div>
                            <div class="row mt-1 mb-1">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    Rate of Interest per annum<br />
                                    @Html.TextBoxFor(model => model.int_rate, new { @class = "sizeL_whitebg", @type = "text" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-12 border-right">
                            <div class="row mt-1">
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Loan Date<br />
