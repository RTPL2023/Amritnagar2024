                                    @Html.TextBoxFor(model => model.instl, new { @class = "sizeS_whitebg", @type = "text" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                    Inst.Principal<br />
                                    @Html.TextBoxFor(model => model.inst_prn, new { @class = "sizeM1_whitebg", @type = "text" })
                                </div>
                            </div>
                            <div class="row mt-1 mb-1">
