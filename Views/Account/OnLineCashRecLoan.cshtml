                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 text-center">
                                    Loan Amount<br />
                                    @Html.TextBoxFor(model => model.loan_amt, new { @class = "sizeM1_whitebg", @type = "text" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-12 col-12">
