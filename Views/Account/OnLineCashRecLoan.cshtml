                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    Overdue Interest &nbsp; @Html.TextBoxFor(model => model.od_inst, new { @class = "sizeM2_whitebg", @type = "text" })
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    Overdue Add/Int. @Html.TextBoxFor(model => model.od_ad_int, new { @class = "sizeM2_whitebg", @type = "text" })
