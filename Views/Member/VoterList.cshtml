@model Amritnagar.Models.ViewModel.VoterListViewModel

@{
    ViewBag.Title = "VoterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .size {
        width: 180px;
        height: 25px;
    }

    .size1 {
        width: 150px;
        height: 25px;
    }

    .sizeM {
        width: 100px;
        height: 25px;
    }

    .sizeS {
        width: 50px;
        height: 25px;
    }

    .sizeL {
        width: 180px;
        height: 25px;
    }

    .sizebig {
        width: 300px;
        height: 25px;
    }

    .heading {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        color: saddlebrown;
        font-size: 30px;
        text-align: center;
    }

    table.bordered {
        border-collapse: collapse;
        font-size: 12px;
    }

        table.bordered td, table.bordered th {
            border: 1px solid black;
            text-align: center;
            padding: 8px;
        }

    .tab {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        border-collapse: collapse;
         width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

        .tab tbody {
            display: block;
            width: 800px;
            overflow: auto;
            height: 200px;
            text-align: center;
        }

        .tab td, .tab th {
            border: 1px solid #ddd;
            padding: 8px;
            border-collapse: collapse;
            width: 800px;
        }

        .tab tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .tab tr:hover {
            background-color: rgba(255, 182, 193, 0.2);
        }

        .tab th {
            padding: 8px;
            text-align: center;
            /*background-color: #04AA6D;*/
            background-color: firebrick;
            font-size: 12px;
            color: white;
            position: sticky;
            top: 0;
        }

    .tab1 {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        border-collapse: collapse;
        /* width: 1000px;*/
        margin-left: auto;
        margin-right: auto;
    }

        .tab1 tbody {
            display: block;
            /* width: 1000px;*/
            overflow: auto;
            height: 200px;
            text-align: center;
        }

        .tab1 td, .tab1 th {
            border: 1px solid black;
            padding: 8px;
            border-collapse: collapse;
            /* width: 1000px;*/
        }

        .tab1 tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .tab1 tr:hover {
            background-color: rgba(255, 182, 193, 0.2);
        }

        .tab1 th {
            padding: 8px;
            text-align: center;
            /*background-color: #04AA6D;*/
            background-color: lightgray;
            color: firebrick;
            font-size: 12px;
            color: white;
            position: sticky;
            top: 0;
        }

    input {
        background-color: rgb(226,148,91,0.2)
    }

    select {
        background-color: rgb(226,148,91,0.2)
    }

    input:focus {
        background-color: rgba( 226,148,91, 0.6);
    }

    select:focus {
        background-color: rgba(226,148,91, 0.6);
    }

    .border-right {
        border-right: 1px solid black;
    }

    .border-top {
        border-top: 1px solid black;
    }

    .textHead {
        background-color: maroon;
        color: gold;
        font-family: 'Times New Roman';
        font-size: 13px;
        padding-top: 5px;
        padding-bottom: 5px
    }

    .divBorder {
        border: 1px solid gray;
    }

    .divText {
        font-size: 12px;
        font-weight: bold;
        background-color: white;
        z-index: 100;
        margin-top: -10px;
        color: firebrick;
        text-align: center
    }
</style>
<form asp-controller="Member" asp-action="VoterList" method="post">
    <div class="container" style="height:70px">

    </div>
    <div class="heading mt-4">
        Voter List
    </div>
    <div class="container mt-2" style="margin-bottom:15px">
        <div class="row justify-content-md-center">
            <div class="col-lg-11 col-md-11 col-sm-12 col-12 border border-1 rounded border-danger" style="width:1000px">
                <div class="row mt-2">
                    <div class="col-lg-3 col-md-4 col-sm-12 col-12">
                        Book No:<br />
                        @Html.TextBoxFor(model => model.book_no, new { @class = "size", @type = "text"})
                    </div>
                    <div class="col-md-1 col-sm-12 col-12 mt-3">
                        <input id="BtnRefresh" type="button" name="BtnRefresh" Height="40" Width="100" class="btn btn-primary btn-sm" value="Refresh" onclick="ShowTable()" />
                    </div>
                    <div class="col-md-1 col-sm-12 col-12  mt-3">                       
                        <input id="BtnPrint" type="button" name="BtnPrint" Height="40" Width="100" class="btn btn-primary btn-sm" value="Print" />
                    </div>
                    <div class="col-md-3 col-sm-12 col-12 mt-3 ">
                        <input id="BtnDistList" type="button" name="BtnDistList" Height="40" Width="100" class="btn btn-primary btn-sm" value="Distribution List" />
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col-lg-3 col-md-4 col-sm-12 col-12">
                        Unit:<br />
                        @Html.DropDownListFor(p => p.unit, new SelectList(Model.EmpBranchDesc, "Value", "Text"), "Select", new { @class = "size"})
                    </div>
                    <div class="col-md-3 col-sm-12 col-12 mt-3">
                        <input id="BtnRefreshAll" type="button" name="BtnRefreshAll" Height="40" Width="100" class="btn btn-primary btn-sm" value="Refresh All" onclick="ShowTableForAllBookNo()" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                        <img id="loading" src="~/wwwroot/Images/LoadingGif.gif" />
                        <div class="table-responsive mt-1">
                            <table id="VoterList" class="tab">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <script type="text/javascript" src="~/Content/lib/bootstrap/dist/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#book_no").focus();
            $("#loading").hide();
        });

        function ShowTable() {
            if ($('#book_no').val() == null || $('#book_no').val() == "") {
                alert("Book No Can't Be Empty");
            }
            else if ($('#unit').val() == "Select" || $('#unit').val() == "") {
                    alert("Please Choose Employer Branch");
            }
            else {
                    $("#loading").show();
                    let ModelObject = { book_no: $('#book_no').val(), unit: $('#unit').val()};
                    $.ajax({
                    type: "POST",
                         url: '@Url.Action("GetVoterList", "Member")',
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                        $("#loading").hide();
                            document.getElementById("VoterList").innerHTML = data.tableelement;
                        },
                     error: function (err) {
                    //alert("Error Occured");
                     }
                    });
                 }
        }

        function ShowTableForAllBookNo() {          
            if ($('#unit').val() == "Select" || $('#unit').val() == "") {
                    alert("Please Choose Employer Branch");
            }
            else {
                    $("#loading").show();
                    let ModelObject = { unit: $('#unit').val()};
                    $.ajax({
                    type: "POST",
                         url: '@Url.Action("GetVoterListForAllBookNo", "Member")',
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                        $("#loading").hide();
                            document.getElementById("VoterList").innerHTML = data.tableelement;
                        },
                     error: function (err) {
                    //alert("Error Occured");
                     }
                    });
            }
        }


    </script>
}