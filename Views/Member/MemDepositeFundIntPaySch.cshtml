<form asp-controller="Member" asp-action="MemDepositeFundIntPaySch" method="post">
    <div class="container" style="height:70px">

    </div>
    <div class="heading mt-4">
        Member's Deposit Fund Interest Payable Schedule
    </div>
    <div class="container mt-3">
        <div class="row justify-content-md-center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 border border-1 rounded border-danger" style="width:1000px">
                <div class="row mt-2">
                    <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                        Colliery Code:
                        @Html.DropDownListFor(p => p.colliery_code, new SelectList(Model.EmpBranchDesc, "Value", "Text"), "Select", new { @class = "size" })

                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                        Exe/Gen:
                        @Html.TextBoxFor(p => p.ex_gen, new { @class = "size", @type = "text" })
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                        <input id="BtnRefresh" type="button" name="BtnRefresh" Height="40" Width="100" class="btn btn-primary btn-sm" value="Refresh" onclick="Btnrefreshonclick()" />
                        <input id="BtnSave" type="button" name="BtnSave" Height="40" Width="100" class="btn btn-primary btn-sm" value="Save"  onclick="btnsaveonclick()"/>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                Branch<br />
                                @Html.DropDownListFor(p => p.branch, new SelectList(Model.BranchDesc, "Value", "Text"), "Select", new { @class = "size" })
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                GL Account Head<br />
                                @Html.DropDownListFor(p => p.ac_hd, new SelectList(Model.achddesc, "Value", "Text"), "Select", new { @class = "size",@onchange= "AchdOnchange()" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-12">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                                Book No<br />
                                @Html.TextBoxFor(p => p.book_no, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                                From Date<br />
                                @Html.TextBoxFor(p => p.fr_dt, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                                To Date<br />
                                @Html.TextBoxFor(p => p.to_dt, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                Posting Date<br />
                                @Html.TextBoxFor(p => p.post_dt, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                                Int Rate(%)<br />
                                @Html.TextBoxFor(p => p.int_rate, new { @class = "sizeM", @type = "text" })
                            </div>

                        </div>
                    </div>

                </div>
                <div class="container mt-2">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center p-1" style="background-color:indianred;color:white;font-size:15px;font-weight:bold;text-align:center;text-transform:uppercase">
                            @Html.TextBoxFor(p => p.heading, new { @class = "sizebig1", @type = "text" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                            <img id="loading" src="~/wwwroot/Images/LoadingGif.gif" />
                            <div class="table-responsive mt-1">
                                <table id="list" class="tab">
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row mt-2" style="background-color: rgb(244,164,96,0.45); font-size: 13px; font-weight: bold ">
                    <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                        <div class="row mt-1" style="color:saddlebrown">
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12 text-center">

                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12 text-center">
                                Principal Balance
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12 text-center">
                                Interest Payable
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12 text-center">
                                Total Balance
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                Opening Balance
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.op_prn_bal, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.op_int_pay, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.op_tot_bal, new { @class = "sizeM", @type = "text" })
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                Closing Balance
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.close_prn_bal, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.close_int_pay, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-12">
                                @Html.TextBoxFor(p => p.close_tot_bal, new { @class = "sizeM", @type = "text" })
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-12 col-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                                Add Interst Payable<br />
                                @Html.TextBoxFor(p => p.add_int_pay, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                                Net Interst Payable<br />
                                @Html.TextBoxFor(p => p.net_int_pay, new { @class = "sizeM", @type = "text" })
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                                Net Total<br /> Balance<br />
                                @Html.TextBoxFor(p => p.net_tot_bal, new { @class = "sizeM", @type = "text" })
                            </div> 
                            <div class="col-lg-4 col-md-4 col-sm-12 col-12 ">
                               
                                @Html.TextBoxFor(p => p.forsave, new { @class = "disnon", @type = "text" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section scripts
{
    <script type="text/javascript" src="~/Content/lib/bootstrap/dist/js/bootstrap-datepicker.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/start/jquery-ui.css">
