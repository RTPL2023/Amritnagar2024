    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#loading").hide();
            //$("#frm_dt").hide();
            //$("#to_dt").hide();
        });
      

       function AchdOnchange() {
           
                /*alert("ok");*/
           let ModelObject = { ac_hd: $('#ac_hd').val()};
                /*alert(JSON.stringify(ModelObject));*/
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("getintrateByachd", "Member")',
                    data: ModelObject,
                    dataType: "json",
                    success: function (data) {
                        $('#int_rate').val(data.int_rate);
                        $('#heading').val(data.heading);
                    },
                    error: function (err) {
                        alert("Unable To Calculate");
                    }
                });
            
        };
        function Btnrefreshonclick() {
            $("#loading").show();
                /*alert("ok");*/
            let ModelObject = {
                ac_hd: $('#ac_hd').val(),
                fr_dt: $('#fr_dt').val(),
                colliery_code: $('#colliery_code').val(),
                branch: $('#branch').val(),
                ex_gen: $('#ex_gen').val(),
                to_dt: $('#to_dt').val(),
                book_no: $('#book_no').val(),
                int_rate: $('#int_rate').val(),
            };
                /*alert(JSON.stringify(ModelObject));*/
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("getLIstForintrestpost", "Member")',
                    data: ModelObject,
                    dataType: "json",
                    success: function (data) {
                        $("#loading").hide();
                        document.getElementById("list").innerHTML = data.te;
                        $('#op_prn_bal').val(data.op_prn_bal);
                        $('#op_int_pay').val(data.op_int_pay);
                        $('#op_tot_bal').val(data.op_tot_bal);
                        $('#close_prn_bal').val(data.close_prn_bal);
                        $('#close_int_pay').val(data.close_int_pay);
                        $('#close_tot_bal').val(data.close_tot_bal);
                        $('#add_int_pay').val(data.add_int_pay);
                        $('#net_int_pay').val(data.net_int_pay);
                        $('#net_tot_bal').val(data.net_tot_bal);

                    },
                    error: function (err) {
                        alert("Unable To Calculate");
                    }
                });
            
        };
        function btnsaveonclick() {
            $("#loading").show();
            $('#forsave').val("Savedata");
            /*alert("ok");*/
            let ModelObject = {
                ac_hd: $('#ac_hd').val(),
                fr_dt: $('#fr_dt').val(),
                colliery_code: $('#colliery_code').val(),
                branch: $('#branch').val(),
                ex_gen: $('#ex_gen').val(),
                to_dt: $('#to_dt').val(),
                book_no: $('#book_no').val(),
                int_rate: $('#int_rate').val(),
                post_dt: $('#post_dt').val(),
                forsave: $('#forsave').val(),
            };
            /*alert(JSON.stringify(ModelObject));*/
            $.ajax({
                type: "POST",
                url: '@Url.Action("getLIstForintrestpost", "Member")',
                data: ModelObject,
                dataType: "json",
                success: function (data) {
                    //alert(data);
                    $("#loading").hide();
                },
                error: function (err) {
                    alert("Unable To Calculate");
                }
            });

        };

